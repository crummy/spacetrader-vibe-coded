{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@game/*": ["../ts/*"],
      "@game-types": ["../ts/types.ts"],
      "@game-engine": ["../ts/engine/game.ts"],
      "@game-ui": ["../ts/ui/ui-fields.ts"],
      "@game-state": ["../ts/state.ts"],
      "@game-data/*": ["../ts/data/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "../ts/types.ts", "../ts/engine/game.ts", "../ts/ui/ui-fields.ts", "../ts/state.ts", "../ts/economy/pricing.ts", "../ts/economy/trading.ts", "../ts/data/tradeItems.ts", "../ts/data/systems.ts", "../ts/data/shipTypes.ts", "../ts/game/endings.ts", "../ts/combat/engine.ts"]
}
